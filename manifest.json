{
  "name": "Polaris: Youtube Extension",
  "version": "1.0",
  "description": "A Google Chrome/Firefox Extension that enhances YouTube desktop web interface",
  "permissions": [
    "storage",
    "contextMenus",
    "https://www.youtube.com/*",
    "https://i.ytimg.com/*"
  ],
  "background": {
    "page": "src/html/background.html"
  },
  "options_page": "src/html/options.html",
  "browser_action": {
      "default_title": "Polaris: Youtube Assistant"
  },
  "manifest_version": 2,
  "web_accessible_resources" : ["src/js/scripts/player.js", "src/fonts/*.*"]
}